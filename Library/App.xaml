        <ControlTemplate TargetType="Button" x:Key="Edit">
            <Border 
                CornerRadius="12"
                Background="White"
                BorderBrush="#04a0ff"
                BorderThickness="3"
                Width="120px"
                Height="30px"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                Name="btn">
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">Редактировать</ContentControl>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="btn" Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#04a0ff"></SolidColorBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="btn" Property="Cursor" Value="Hand"></Setter>
                    <Setter TargetName="btn" Property="TextBlock.Foreground" Value="White"></Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

